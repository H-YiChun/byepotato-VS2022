@section Styles
{
    <style>
        #player-chart {
            width: 100%;
            max-width: 400px;
            height: 600px;
        }

        #character-chart {
            width: 100%;
            max-width: 400px;
            height: 600px;
        }

        /* 确保容器垂直居中 */
        .chart-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
}

<h1>數據分析</h1>
<hr />
<div class="container">
    <div class="row justify-content-center" id="charts-container">
        <div class="col-12 col-md-6 chart-container">
            <h5 class="text-center">玩家獲取的貨幣區間</h5>
            <div id="player-chart" class="img-fluid"></div>
        </div>
        <div class="col-12 col-md-6 chart-container">
            <h5 class="text-center">角色創建(遷入)的時間分布</h5>
            <div id="character-chart"></div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/echarts.min.js"></script>
    <script>
        $(document).ready(function () {
            // 初始化玩家 Coins 柱狀圖
            var playerChart = echarts.init(document.getElementById('player-chart'));
            var playerOptions = @Html.Raw(@ViewBag.PlayerOptions);
            playerChart.setOption(playerOptions);

            // 初始化 Character MovingDate 折線圖
            var characterChart = echarts.init(document.getElementById('character-chart'));
            var characterOptions = @Html.Raw(@ViewBag.CharacterOptions);
            characterChart.setOption(characterOptions);
        });
    </script>
}
