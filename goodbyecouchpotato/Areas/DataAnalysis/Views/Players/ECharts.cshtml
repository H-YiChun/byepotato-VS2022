@section Styles
{
    <style>
        #chart {
            position: relative;
            width:800px;
            height:600px;
            overflow: hidden;
        }
    </style>
}

<div id="chart"></div>
@section Scripts 
{
    <script src="~/lib/echarts.min.js"></script>
    <script>
        $(document).ready(function() {
            var myChart = echarts.init(document.getElementById('chart'), null, {
                renderer: 'canvas',
                useDirtyRect: false
            });
            myChart.setOption(@Html.Raw(@ViewBag.Options));
        });
    </script>
}