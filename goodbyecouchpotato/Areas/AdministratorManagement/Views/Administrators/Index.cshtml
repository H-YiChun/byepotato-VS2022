@model List<AdminViewModel>

<h1>用戶權限管理</h1>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
            <h5>搜尋用戶</h5>
            <hr />
            <form>
                <div class="form-group">
                    <label for="nameSearch" class="control-label">用戶名稱</label>
                    <input type="text" id="nameSearch" class="form-control" placeholder="搜尋用戶名稱">
                </div>
                <div class="form-group">
                    <label for="roleSearch" class="control-label">當前角色</label>
                    <select id="roleSearch" class="form-control form-select" >
                        <option value="">請選擇角色</option>
                        <option value="PermiGuard">PermiGuard</option>
                        <option value="User">User</option>
                    </select>
                </div>
            </form>
            <hr />
            <div class="d-grid">
                <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="btn btn-info">新增管理員</a>
            </div>
         </div>

        <div class="col-12 col-md-9">
            <table class="table table-striped jambo_table bulk_action" id="adminTable">
                <thead class="even pointer">
                    <tr class="odd pointer">
                        <th>用戶名稱</th>
                        <th>當前角色</th>
                        <th class="col-3">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        // 獲取當前登入用戶ID
                        var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                        // 檢查是否是自己帳號，如果是則不顯示操作按鈕
                        if (user.UserId != currentUserId)
                        {
                            <tr>
                                <td width="30%">@user.UserName</td>
                                <td width="20%">@string.Join(", ", user.Roles.Select(r => r.RoleName))</td>
                                <td width="30%">
                                    <form id="roleChangeForm" method="post" asp-action="ChangeUserRole" class="d-flex align-items-center">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <input type="hidden" name="oldRoleName" value="@user.Roles.FirstOrDefault()?.RoleName" />
                                        <select width="80%" id="newRoleSelect" name="newRoleName" class="form-control form-select me-2" style="width: 150px;" required>
                                            <option value="" disabled selected>---請選擇---</option>
                                            <option value="PermiGuard">PermiGuard</option>
                                            <option value="User">User</option>
                                        </select>
                                        <button width="20%" type="submit" class="btn btn-info">更改角色</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 用戶名稱搜尋
            $('#nameSearch').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#adminTable tbody tr').filter(function () {
                    $(this).toggle($(this).find('td:first').text().toLowerCase().indexOf(value) > -1);
                });
            });

            // 當前角色搜尋
            $('#roleSearch').on('change', function () {
                var value = $(this).val().toLowerCase();
                $('#adminTable tbody tr').filter(function () {
                    $(this).toggle($(this).find('td:nth-child(2)').text().toLowerCase().indexOf(value) > -1 || value === "");
                });
            });
        });
    </script>
}






